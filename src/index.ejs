<!doctype html>
<html lang="en">

<head>
  <!-- Required meta tags -->
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

  <!-- Bootstrap CSS -->
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css"
    integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
  <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
  <link rel="stylesheet" href="main.css">

</head>

<body>
  <!-- Modal Period -->
  <div class="modal fade" id="periodModal" tabindex="-1" role="dialog">
    <div class="modal-dialog modal-dialog-centered" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title text-center w-100">Filter by Period</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          <div class="row">
            <label class="h5 mx-3 w-25" for="startPeriod">Start date:</label>
            <input type="date" id="startPeriod" name="period-start" value="2020-07-02">
          </div>
          <div class="row mt-3">
            <label class="h5  mx-3 w-25" for="endPeriod">End date:</label>
            <input type="date" id="endPeriod" name="period-end" value="2020-07-03">
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
          <button id="periodButton" type="button" data-dismiss="modal" class="btn btn-primary">Filter</button>
        </div>
      </div>
    </div>
  </div>
  <!-- Modal Month -->
  <div class="modal fade" id="monthModal" tabindex="-1" role="dialog">
    <div class="modal-dialog modal-dialog-centered" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title text-center w-100">Filter by Month</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close" value="2020-07-03">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          <div class="row">
            <label class="h5 mx-3 w-25" for="selectedMonth">Select month:</label>
            <input type="month" id="selectedMonth" name="selected-month">
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
          <button id="monthButton" type="button" data-dismiss="modal" class="btn btn-primary">Filter</button>
        </div>
      </div>
    </div>
  </div>
  <!-- Modal Year -->
  <div class="modal fade" id="yearModal" tabindex="-1" role="dialog">
    <div class="modal-dialog modal-dialog-centered" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title text-center w-100">Filter by Year</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close" value="2020-07-03">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          <div class="row">
            <label class="h5 mx-3 w-25" for="selectedYear">Select year:</label>
            <input type="number" min="1980" max="2025" id="selectedYear" name="selected-year" value="2020">
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
          <button id="yearButton" type="button" data-dismiss="modal" class="btn btn-primary">Filter</button>
        </div>
      </div>
    </div>
  </div>
  <nav class="navbar navbar-expand-lg navbar-light bg-light ">
    <a id="brand" class="navbar-brand" href="#">
    </a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" id="searchButton"
      data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false"
      aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <form id="searchForm" class="form-inline ml-auto mr-2 my-2 my-lg-0">
        <input class="form-control mr-sm-2" type="text" id="searchInput" placeholder="Search" aria-label="Search">
        <button class="btn btn-outline-secondary my-2 my-sm-0" type="submit">Search</button>
      </form>
      <ul class="navbar-nav ">
        <li class="nav-item dropdown">
          <button id="resetButton" class="btn btn-outline-danger mr-2" type="button">Reset</button>
        </li>
        <li class="nav-item dropdown">
          <a class="nav-link dropdown-toggle d-flex align-center btn" href="#" id="navbarDropdown" role="button"
            data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            <span class="material-icons mr-2">filter_alt</span>
            <p class="my-0">Filter</p>
          </a>
          <div class="dropdown-menu" aria-labelledby="navbarDropdown">
            <button type="button" class="btn rounded-0 dropdown-item pl-2 d-flex align-center" data-toggle="modal"
              data-target="#periodModal">
              <span class="material-icons mr-2">date_range</span>
              <p class="my-0">Period</p>
            </button>
            <div class="dropdown-divider"></div>
            <button type="button" class="btn rounded-0 dropdown-item pl-2 d-flex align-center" data-toggle="modal"
              data-target="#monthModal">
              <span class="material-icons mr-2">today</span>
              <p class="my-0">Month</p>
            </button>
            <div class="dropdown-divider"></div>
            <button type="button" class="btn rounded-0 dropdown-item pl-2 d-flex align-center" data-toggle="modal"
              data-target="#yearModal">
              <span class="material-icons mr-2">event</span>
              <p class="my-0">Year</p>
            </button>
          </div>
        </li>
        <li class="nav-item dropdown">
          <a class="nav-link dropdown-toggle d-flex align-center btn" href="#" id="navbarDropdown" role="button"
            data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            <span class="material-icons mr-2">sort</span>
            <p class="my-0">Sort</p>
          </a>
          <div class="dropdown-menu" aria-labelledby="navbarDropdown">
            <a id="sortDate" class="sort-active pl-2 dropdown-item d-flex align-center" href="#">
              <span id="sortDateIcon" class="material-icons mr-2">keyboard_arrow_up</span>
              <p class="my-0">Date</p>
            </a>
            <div class="dropdown-divider"></div>
            <a id="sortName" class="dropdown-item pl-2 d-flex align-center" href="#">
              <span id="sortNameIcon" class="material-icons mr-2">keyboard_arrow_up</span>
              <p class="my-0">Name</p>
            </a>
            <div class="dropdown-divider"></div>
            <a id="sortPrice" class="dropdown-item pl-2 d-flex align-center" href="#">
              <span id="sortPriceIcon" class="material-icons mr-2">keyboard_arrow_up</span>
              <p class="my-0">Price</p>
            </a>
          </div>
        </li>
      </ul>
    </div>
  </nav>
  <div class="mt-2 container-fluid bg-3 text-center">
    <div id="cardsContainer" class="row">
    </div>
  </div>
  <script src="bundle.js"></script>
  <script src="https://code.jquery.com/jquery-3.5.1.min.js"
    integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>
  <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"
    integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous">
  </script>
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js"
    integrity="sha384-OgVRvuATP1z7JjHLkuOU7Xw704+h835Lr+6QL9UvYjZE3Ipu6Tp75j7Bh/kR0JKI" crossorigin="anonymous">
  </script>
</body>

</html>